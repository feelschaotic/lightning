<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/mult_rl"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/multImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/file_music" />

        <TextView
            android:id="@+id/multimediaLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#8e000000"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="04:02"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/multName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mult_rl"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/multSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multName"
        android:layout_toRightOf="@id/mult_rl"
        android:text="11mb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grgray" />

    <ImageView
        android:id="@+id/audio_check"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_check_off"/>

    <View style="@style/hr" />
</RelativeLayout>